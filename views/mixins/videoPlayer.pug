mixin videoPlayer(video={})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.fileUrl}`)
    .videoPlayer__controls
      .videoPlayer_column
        span
          i.fas.fa-volume-up
        span
          |00:00 / 10:00
      .videoPlayer_column
        span#jsPlayButton
          i.fas.fa-play
      .videoPlayer_column
        span
          i.fas.fa-expand