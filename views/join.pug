extends layouts/main

block content
  .form-container
    form(action=routes.join, method='post')
      input(type='text', name='name', required=true, placeholder='Full Name')
      input(type='email', name='email', required=true, placeholder='Email')
      input(type='password', name='password1', required=true, placeholder='Password')
      input(type='password', name='password2', required=true, placeholder='Verify Password')
      input(type='submit', value='Join')
    include partials/socialLogin
